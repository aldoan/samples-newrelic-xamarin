<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewRelicXamarinSamples.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#00838f" Padding="24" CornerRadius="0">
            <Label Text="New Relic Xamarin Samples" HorizontalTextAlignment="Center" TextColor="White" FontSize="Title"/>
        </Frame>
        <Label Text="Agent Samples:" FontSize="Subtitle" Padding="30,10,30,10"/>
        <Button Text="Send Custom Event"  Clicked="Handle_Custom_Event" BorderColor="#00838f" BackgroundColor="#00838f" TextColor="White" Margin="10, 0, 10, 0"/>
        <Button Text="Send Mobile Breadcrumb"  Clicked="Handle_Breadcrumb" BorderColor="#00838f" BackgroundColor="#00838f" TextColor="White" Margin="10, 0, 10, 0"/>
        <Button Text="Crash the App"  Clicked="Handle_Crash" BorderColor="#00838f" BackgroundColor="#00838f" TextColor="White" Margin="10, 0, 10, 0"/>
    </StackLayout>

</ContentPage>
